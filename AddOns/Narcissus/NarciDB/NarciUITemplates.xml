	<Button name="Narci_AlertFrame_Autohide" inherits="Narci_AlertFrame">
		<HitRectInsets>
			<AbsInset left="0" right="0" top="0" bottom="24"/>
		</HitRectInsets>
		<Animations>
			<AnimationGroup parentKey="Counter">
				<Scale duration="3" order="1"/>
				<Scripts>
					<OnFinished>
						NarciAPI_FadeFrame(self:GetParent(), 0.35, "OUT");
					</OnFinished>
				</Scripts>
			</AnimationGroup>
		</Animations>
		<Scripts>
			<OnLoad>
				self.Text:SetTextColor(1, 0, 0)
			</OnLoad>
			<OnShow>
				if self.Text:GetWidth() > 220 then
					self.Text:SetWidth(220);
					self:SetHeight(self.Text:GetHeight() + 20)
				end
				self:StopAnimating();
				self.Counter:Play();
				self:SetFrameStrata("TOOLTIP");
			</OnShow>
			<OnEnter>
				self:StopAnimating();
			</OnEnter>
			<OnLeave>
				self:StopAnimating();
				if self:IsVisible() then
					self.Counter:Play();
				end
			</OnLeave>
			<OnHide>
				self:StopAnimating();
				self:Hide();
				self:SetAlpha(0);
			</OnHide>
		</Scripts>
	</Button>

